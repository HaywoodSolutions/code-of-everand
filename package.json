{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.20.2"
  },
  "dependencies": {
    "metro-config": "^0.56.0"
  },
  "scripts": {
    "web": "lerna --scope=web-app run start --stream --",
    "expo": "lerna --scope=expo-app run start --stream --",
    "postinstall": "cd ./packages/expo-app && expo-yarn-workspaces postinstall",
    "build": "lerna run build"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": ["**/react-native", "**/react-native/**", "**/expo", "**/expo/**"]
  }
}
